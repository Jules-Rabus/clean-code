{
    "name": "app",
    "private": true,
    "workspaces": [
        "application",
        "domain",
        "infrastructure/database/sequelize",
        "infrastructure/database/mongoose",
        "infrastructure/platforms/backend/nest",
        "infrastructure/platforms/backend/express",
        "infrastructure/platforms/frontend/react"
    ],
    "scripts": {
        "format": "prettier --write \"**/*.+(ts)\"",
        "format:check": "prettier --check \"**/*.+(ts)\"",
        "build": "npm run build --workspaces",
        "start:nest": "npm run start:nest --workspaces=nest",
        "start:nest:dev": "npm run start:dev --workspaces=nest",
        "start:express": "npm run express --workspaces=express",
        "start:express:dev": "npm run dev --workspaces=express",
        "start:next": "npm run start --workspaces=next",
        "start:next:dev": "npm run dev --workspaces=next",
        "test": "npm run build --workspaces nest && npm run node --workspaces=nest"
    },
    "devDependencies": {
        "prettier": "3.4.2"
    }
}
